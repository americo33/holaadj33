//BOOTSTRAP OVERRIDES
.navbar
  .brand
    padding-left 50px

body
  background #f4f4f4
  h1
    padding-top 15px
    margin-bottom 25px
    
h1
  font-size 22px
  
h2
  font-size 18px
  margin 25px 0

h3
  font-size 14px
  line-height inherit
  margin-top 25px
  margin-bottom 10px

p
  margin-bottom 25px

code,pre,tt
  font-family Monaco,Consolas,"Lucida Console",monospace
  font-size 12px
  line-height 18px
  font-style normal
  -tab-size 3
  -o-tab-size 3
  -moz-tab-size 3
  -webkit-tab-size 3

tt
  padding 0 3px
  background #fff
  border 1px solid #ddd
  zoom 1

code
  margin-left 20px

pre
  font-size 12px
  padding 2px 0 2px 15px
  border 4px solid #bbb
  border-top 0
  border-bottom 0
  margin 0 0 25px
  white-space -moz-pre-wrap
  white-space -o-pre-wrap
  word-wrap break-word
  white-space pre-wrap

td
  white-space -moz-pre-wrap
  white-space -o-pre-wrap
  word-wrap break-word
  white-space pre-wrap
  padding 0 15px 5px 0

//CUSTOM STYLES
.header
  margin-bottom: 15px;
  border-bottom: 2px solid #ccc;
  padding-bottom: 15px;

#content
  margin-top 40px
  float left
  margin-left 250px
  width 550px

#sidebar
  margin-top 40px
  float left
  background #fff
  position fixed
  top 0
  left 0
  bottom 0
  width 160px
  overflow-y auto
  overflow-x hidden
  -webkit-overflow-scrolling touch
  padding 15px 30px
  border-right 1px solid #bbb
  -webkit-box-shadow 0 0 20px #ccc
  box-shadow 0 0 20px #ccc
  -webkit-box-shadow 0 0 20px #ccc
  -moz-box-shadow 0 0 20px #ccc
  .version
    font-size 10px
    font-weight normal

#supplement
  margin-top 40px
  float left
  width 300px
  margin-left 30px
  .fixed
    width 300px
    position fixed
    padding-top 15px
    .tags
      line-height 23px
      word-spacing 2px
      padding 10px 0

.carbonad
  position absolute
  top 0
  right 0
  margin-top 0 !important
  padding 15px
  height auto !important
  overflow hidden
  font-size 13px !important
  line-height 16px !important
  background #fcfcfc !important
  border 0 !important
  -webkit-border-radius 4px
  border-radius 4px
  -webkit-box-shadow inset 0 2px 5px rgba(0,0,0,0.2),0 1px 0 rgba(255,255,255,0.1)
  box-shadow inset 0 2px 5px rgba(0,0,0,0.2),0 1px 0 rgba(255,255,255,0.1)

.carbonad-img
  margin 0 !important

.carbonad-text,.carbonad-tag,.carbonad-tag a
  color #777 !important

.carbonad-text,.carbonad-tag
  float none !important
  display block !important
  width auto !important
  height auto !important
  margin-left 140px !important
  font-family "Helvetica Neue",Helvetica,Arial,sans-serif !important

.carbonad-text
  padding-top 0 !important

.carbonad-tag
  text-align left !important

a,a:visited
  color #444

a:active,a:hover
  color #000

a
  img
    border 0
  &.toc_titlehover
    text-decoration underline

a.toc_title,a.toc_titlevisited
  display block
  color #000
  font-weight bold
  margin-top 15px

ul
  &.toc_section
    font-size 11px
    line-height 14px
    margin 5px 0 0 0
    padding-left 0
    list-style-type none
    font-family Lucida Grande

.toc_section
  li
    cursor pointer
    margin 0 0 3px 0
    line-height 16px
    padding-left 10px
    text-indent -5px
    :before
      content "-" 
      position relative
      left -5px
    a
      text-decoration none
      color #000
    a:hover
      text-decoration underline
.toc_section.links
  li
    :before
      content: "Â»"
div
  &.run
    position absolute
    right 15px
    width 26px
    height 18px
  &.runactive
    background-position -51px 0

.content ul
  margin 25px 0
  width 550px

p
  &.warning
    font-size 12px
    line-height 18px
    font-style italic

.content
  ul
    list-style circle
    padding-left 15px
    font-size 13px
    line-height 18px
    li
      margin-bottom 10px
    &.small
      font-size 12px

span
  &.alias
    font-size 14px
    font-style italic
    margin-left 20px


